<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>{{ node_exporter_service_name }}</string>

    <key>ProgramArguments</key>
    <array>
            <string>sh</string>
            <string>-c</string>
            <string>{{ node_exporter_final_dest }}/node_exporter --web.listen-address=":{{ node_exporter_listen_port }} {{ node_exporter_flags }}"</string>
    </array>

    <key>KeepAlive</key>
    <true/>
</dict>
</plist>
